@model JogoModel
@{
    ViewBag.Title = "Manutenção de Jogos";
}

@if (Model == null || Model.IdJogo == null)
{
    <h2>Cadastro de Jogo</h2>
}
else
{
    <h2>Edição de Jogo</h2>
}

@using (Html.BeginForm("Salvar", "Jogo", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.ValidationSummary(false)

    @Html.HiddenFor(m => m.IdJogo)

    <div class="form-group">
        @Html.LabelFor(m => m.Nome, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.Nome, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Nome)
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Descricao, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.Descricao, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Descricao)
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Preco, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.Preco, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Preco)
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Categoria, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.Categoria, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Categoria)
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Selo, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.Selo, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Selo)
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.UrlImagem, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.UrlImagem, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.UrlImagem)
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.TagVideo, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.TagVideo, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.TagVideo)
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-primary">Salvar</button>
        </div>
    </div>
}

@section Scripts {
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
}