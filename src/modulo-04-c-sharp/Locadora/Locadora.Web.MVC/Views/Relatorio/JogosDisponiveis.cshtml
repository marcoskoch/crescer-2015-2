@model RepositorioModel
@{
    ViewBag.Title = "Jogos Disponíveis";
}

<h2>Jogos disponíveis para locação</h2>

<table class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th style="width: 40%">Jogo</th>            
            <th style="width: 20%">Categoria</th>
            <th style="width: 20%">Preço</th>
            <th style="width: 20%">Detalhes do Jogo</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var jogo in Model.Jogos)
        {
            <tr>
                <td>@jogo.Nome</td>
                <td>@jogo.Categoria</td>
                <td>@jogo.Preco.ToString("c")</td>
                <td>@Html.ActionLink("Detalhes do Jogo", "DetalhesDoJogo", "Jogo", new { id = jogo.Id }, null)</td>
            </tr>
        }
    </tbody>
</table>
<ul>
    <li>Quantidade total de jogos: @Model.NumeroDeJogos.ToString()</li>
    <li>Valor médio por jogo: @Model.MediaPrecoJogos.ToString("C")</li>
    <li>Jogo mais caro: @Model.JogoMaisCaro</li>
    <li>Jogo mais barato: @Model.JogoMaisBarato</li>
</ul>